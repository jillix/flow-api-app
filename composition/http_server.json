{
    "server": true,
    "config": {
        "session": {}
    },
    "flow": {
        "start": {
            "d": [
                [".start", {
                    "port": 9000,
                    "ssl": {
                        "cert": "ssl/dev.crt",
                        "key": "ssl/dev.key"
                    }
                }]
            ]
        },
        "http_req": {
            "d": [
                ":_main_router/route"
            ]
        },
        "error": {
            "d": [
                [
                    ":flow_tools/transform",
                    {
                        "statusCode": "{code}",
                        "error.code": "{code}",
                        "error.message": "{message}",
                        "error.name": "{name}"
                    }
                ],
                [":flow_tools/stringify", ["error"]],
                [":http_server/send", {
                    "send": "error",
                    "end": true,
                    "headers": {
                        "content-type": "application/json"
                    }
                }]
            ]
        }
    },
    "roles": {
        "*": true
    },
    "module": "flow-http",
    "name": "http_server"
}
